extends ../layout

block content
    h1 Update 
    form(action="/products/update/"+product._id,method="post")
        .form-group
            label(for="productname") Product Name
            input#productname(type="text", class="form-control",name="productname", value=product.productname)
        .form-group
            label(for="price") Price
            input#price(type="text", class="form-control",name="price", value=product.price)
        .form-group
            label(for="sizes") Product size
            input#sizes(type="text", class="form-control",name="sizes", value=product.sizes)
        .form-group
            label(for="colour") Colour
            input#colour(type="text", class="form-control",name="colour", value=product.colour)
        input(type="submit", class="btn btn-info")