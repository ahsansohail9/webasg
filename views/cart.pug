extends layout

block content
  h1 My Shopping Cart
  - var total=0;
    table.table
      thead
        tr
          th Product Name
          th price
          th Product size
          th colour
          th Remove from Cart 
      tbody
        each item in cart
          - total +=Number(item.prize);
          tr
            td=item.productname
            td=item.price
            td=item.sizes
            td=item.colour
            td 
              a(href="/products/cart/remove/"+item._id,class="btn btn-danger") Remove
      tfoot
        tr
            td TOTAL
            td=total
